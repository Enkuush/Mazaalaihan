{
    "manifest_version": 2,
    "version": "0.1",
    "author": "Дашзэвэгийн Барбаяр / Barbayar Dashzeveg",
    "name": "Мазаалайхан",
    "description": "Англи-Монгол Толь Бичиг / English-Mongolia Dictionary",
    "icons": {
        "16": "icons/icon_16.png",
        "48": "icons/icon_48.png",
        "128": "icons/icon_128.png"
    },
    "browser_action": {
        "default_title": "Мазаалайхан",
        "default_icon": "icons/disabled_icon_38.png"
    },
    "background": {
        "scripts": ["libs/jquery-1.11.1.min.js", "background.js", "dictionary.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "css": ["libs/bootstrap-3.2.0/css/mazaalai-bootstrap.css"],
            "js": ["libs/jquery-1.11.1.min.js", "libs/bootstrap-3.2.0/js/bootstrap.min.js", "injection.js"]
        }
    ]
}
